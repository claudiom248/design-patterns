@model IEnumerable<DesignPatterns.Creational.AbstractFactory.RealWorldExample.Domain.Book>

<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            border: 1px solid #aaaaaa;
            padding: 8px;
        }
    </style>
</head>
<body>
<table>
    <tr>
        <th>ISBN</th>
        <th>Title</th>
        <th>Price</th>
        <th>Author</th>
        <th>CopiesSold</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => book.Isbn)</td>
            <td>@Html.DisplayFor(m => book.Title)</td>
            <td>@Html.DisplayFor(m => book.Price)</td>
            <td>@Html.DisplayFor(m => book.Author)</td>
            <td>@Html.DisplayFor(m => book.CopiesSold)</td>
        </tr>
    }
</table>
</body>
</html>